<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:padding="0px" 
>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    	android:padding="10px" 
    >  
    	<TextView android:id="@+main/success_label"
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content" 
    		android:layout_alignParentLeft="true"
    		android:text="Successes: " 
    	/>
        <ImageButton android:id="@+main/add_dice"
            android:src="@drawable/d10_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    		android:layout_alignParentRight="true"
        />
        <TextView android:id="@+main/roll_label"
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content"
    		android:layout_below="@main/success_label"
    		android:layout_alignParentLeft="true" 
    		android:layout_toLeftOf='@main/add_dice'
    		android:text="" 
    	/>
        <TextView 
    		android:layout_width="wrap_content" 
    		android:layout_height="wrap_content" 
        	android:layout_alignParentLeft="true"
    		android:layout_below="@main/add_dice" 
    		android:text="Roll Details" 
    	/>
        <TextView android:id="@+main/exalted_item_dice"
    		android:layout_width="wrap_content" 
    		android:layout_height="wrap_content" 
        	android:layout_alignParentRight="true"
    		android:layout_below="@main/add_dice" 
    		android:text="Stunt Dice" 
    	/>
    </RelativeLayout>
	<ListView xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+main/list"
		android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	/>	
</LinearLayout>
