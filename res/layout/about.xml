<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
	android:padding="10px" 
>    
	<ImageView
	    android:id='@+about/icon'
	    android:src='@drawable/d10'
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
    	android:layout_alignParentTop="true"
    	android:layout_alignParentLeft="true"
	/>
	<TextView
	    android:id='@+about/title'
	    android:layout_alignParentTop="true"
	    android:layout_toRightOf="@about/icon"
	    android:layout_alignParentRight="true"
		android:text='Dice Roller' 
		style="@style/Header"
	/>
	<LinearLayout
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 	
    	    android:layout_below="@about/title"
    	    android:layout_toRightOf="@about/icon"
    	    android:layout_alignParentRight="true"
    	    android:gravity='center'
	>
    	<TextView
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 	
    		android:paddingRight='3px'
    		android:text='@string/version' 
    		style="@style/Detail"
    	/>
    	<TextView
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 	
    		android:text='@string/app_ver' 
    		style="@style/Detail"
    	/>
	</LinearLayout>
    <TextView
	    android:id='@+about/copywrite'
	    android:layout_below="@about/icon"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentLeft="true"
		android:text='@string/app_copyright' 		
		style="@style/Detail"
	/>
	<TextView
	    android:id='@+about/copywrite_detail'
	    android:layout_below="@about/copywrite"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentLeft="true"
		android:text='@string/app_copyright_rights' 		
		style="@style/Detail"
	/>
	   <TextView
        android:id='@+about/source_url'
        android:autoLink='web'
        android:layout_below="@about/copywrite_detail"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:text='@string/source_url'         
        style="@style/Detail"
    />
</RelativeLayout>
